{
    "manifest_version": 3,
    "name": "Reboot",
    "description": "Reboot any webpage to the oldest css!",
    "version": "1.0.0",
    "author": "Grace Clausen, Brysen Reeser, Bridget Peterkin, Gabriel Clark",
    "permissions": ["background","webNavigation","storage", "activeTab", "scripting","tabs"],
    "action": {
        "default_popup":"popup.html",
        "default_icon": {
          "16": "RebootLogoFinal.png",
          "32": "RebootLogoLarge.png",
          "210": "LargeLogo.png"
        }
      },
      "icons": {
        "16": "RebootLogoFinal.png",
        "32": "RebootLogoLarge.png",
        "210": "LargeLogo.png"
      },
    "content_scripts": [{
        "css": ["styles.css"],
        "matches": ["<all_urls>"]
      }],
      "background": {
        "service_worker": "background.js"
      }
}